    <artifactId>jira-suite-utilities</artifactId>
    <currentVersion>0.6</currentVersion>
    <name>JIRA Suite Utilities</name>
    <organization>
        <name>Quadratica SRL</name>
        <url>www.quadratica.com.ar</url>
    </organization>
    <inceptionYear>2007</inceptionYear>

    <developers>
      <developer>
        <name>Gustavo Martin</name>
        <id>gmartin</id>
        <email>gmartin@quadratica.com.ar</email>
        <organization>Quadratica SRL</organization>
        <roles>
          <role>Developer</role>
        </roles>
      </developer>
      <developer>
		<name>Bettina Zucker</name>
		<id>bettina</id>
		<email>bettina.zucker@eu.panasonic.com</email>
		<organization>PASE GmbH</organization>
		<roles>
	  	  <role>Developer</role>
		</roles>
      </developer>
      <developer>
		<name>Alexey Abashev</name>
		  <id>aabashev</id>
		  <email>no_spam@no_spam.com</email>
		  <organization>EPAM Systems</organization>
		  <roles>
	  		<role>Developer</role>
		  </roles>
      </developer>
      <developer>
		<name>Cristiane Fontana</name>
		  <id>cfontana</id>
		  <email>no_spam@no_spam.com</email>
		  <roles>
	  		<role>Developer</role>
		  </roles>
      </developer>
    </developers>
    
    <package>com.atlassian.jira.plugin</package>

    <description></description>
    <shortDescription>A collection of utilities to extends JIRA functionality.</shortDescription>

    <build>
        <sourceDirectory>main/src/</sourceDirectory>
        <resources>
            <resource>
                <directory>main/src/resources</directory>
                <includes>
                    <include>atlassian-plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>templates</targetPath>
                <directory>main/src/resources/templates</directory>
                <includes>
                    <include>**/*.vm</include>
                </includes>
            </resource>
        </resources>
        <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/Test*.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>test/etc</directory>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
