    <build>
        <sourceDirectory>main/src/</sourceDirectory>
        <resources>
            <resource>
                <directory>main/src/resources</directory>
                <includes>
                    <include>atlassian-plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>templates</targetPath>
                <directory>main/src/resources/templates</directory>
                <includes>
                    <include>**/*.vm</include>
                </includes>
            </resource>
        </resources>
        <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/Test*.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>test/etc</directory>
                </resource>
            </resources>
        </unitTest>
    </build>
